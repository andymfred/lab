      "source": [
        "\"\"\"\n",
        "KALSHI WEATHER DATA COLLECTOR - SINGLE FILE VERSION\n",
        "====================================================\n",
        "Copy this entire file into a Google Colab cell and run it.\n",
        "\n",
        "Instructions:\n",
        "1. Open Google Colab: https://colab.research.google.com\n",
        "2. Create a new notebook\n",
        "3. Paste this entire code into a cell\n",
        "4. Run the cell\n",
        "5. Authorize Google Drive access when prompted\n",
        "6. Let it run! Data saves to your Google Drive.\n",
        "\n",
        "Tips for long-running collection:\n",
        "- Use Colab Pro for longer sessions (24hr vs 12hr)\n",
        "- Keep the browser tab active\n",
        "- Re-run daily if session expires (data persists in Drive)\n",
        "\"\"\"\n",
        "\n",
        "# ============================================================================\n",
        "# CONFIGURATION - Edit these values as needed\n",
        "# ============================================================================\n",
        "\n",
        "MARKET = \"KXHIGHCHI\"  # Options: \"KXHIGHCHI\" (Chicago), \"KXHIGHNY\" (New York)\n",
        "ORDERBOOK_INTERVAL = 10  # Collect orderbooks every N seconds\n",
        "WEATHER_INTERVAL = 10   # Collect weather every N seconds\n",
        "STATUS_INTERVAL = 10    # Print status every N seconds\n",
        "\n",
        "# Weather station configurations\n",
        "WEATHER_STATIONS = {\n",
        "    \"KXHIGHCHI\": {\n",
        "        \"name\": \"Chicago\",\n",
        "        \"station_id\": \"KMDW\",\n",
        "        \"nws_office\": \"LOT\",\n",
        "        \"grid_x\": 65,\n",
        "        \"grid_y\": 76\n",
        "    },\n",
        "    \"KXHIGHNY\": {\n",
        "        \"name\": \"NewYork\",\n",
        "        \"station_id\": \"KNYC\",\n",
        "        \"nws_office\": \"OKX\",\n",
        "        \"grid_x\": 33,\n",
        "        \"grid_y\": 37\n",
        "    }\n",
        "}\n",
        "\n",
        "# ============================================================================\n",
        "# SETUP - Mount Google Drive\n",
        "# ============================================================================\n",
        "\n",
        "print(\"=\" * 60)\n",
        "print(\"üå°Ô∏è  KALSHI WEATHER DATA COLLECTOR\")\n",
        "print(\"=\" * 60)\n",
        "\n",
        "# Mount Google Drive\n",
        "from google.colab import drive\n",
        "drive.mount('/content/drive')\n",
        "\n",
        "import os\n",
        "PROJECT_DIR = '/content/drive/MyDrive/kalshi-weather-data'\n",
        "os.makedirs(f'{PROJECT_DIR}/data/orderbooks', exist_ok=True)\n",
        "os.makedirs(f'{PROJECT_DIR}/data/weather/observations', exist_ok=True)\n",
        "os.makedirs(f'{PROJECT_DIR}/data/weather/daily_highs', exist_ok=True)\n",
        "os.makedirs(f'{PROJECT_DIR}/data/weather/forecasts', exist_ok=True)\n",
        "print(f\"‚úì Data directory: {PROJECT_DIR}\")\n",
        "\n",
        "# ============================================================================\n",
        "# IMPORTS\n",
        "# ============================================================================\n",
        "\n",
        "import requests\n",
        "import csv\n",
        "import time\n",
        "from datetime import datetime, timedelta\n",
        "from typing import Optional\n",
        "from IPython.display import clear_output, display, HTML\n",
        "\n",
        "# ============================================================================\n",
        "# KEEP-ALIVE SCRIPT (prevents idle disconnection)\n",
        "# ============================================================================\n",
        "\n",
        "display(HTML('''\n",
        "<script>\n",
        "function ClickConnect(){\n",
        "    console.log(\"Keeping session alive...\");\n",
        "    document.querySelector(\"colab-connect-button\")?.click();\n",
        "}\n",
        "setInterval(ClickConnect, 60000);\n",
        "</script>\n",
        "<p style=\"color: green;\">‚úì Keep-alive script activated</p>\n",
        "'''))\n",
        "\n",
        "# ============================================================================\n",
        "# API CLIENTS\n",
        "# ============================================================================\n",
        "\n",
        "KALSHI_API = \"https://api.elections.kalshi.com/trade-api/v2\"\n",
        "NWS_API = \"https://api.weather.gov\"\n",
        "\n",
        "class KalshiClient:\n",
        "    def __init__(self):\n",
        "        self.session = requests.Session()\n",
        "\n",
        "    def get_active_tickers(self, series):\n",
        "        try:\n",
        "            r = self.session.get(f\"{KALSHI_API}/markets?series_ticker={series}&status=open\", timeout=30)\n",
        "            r.raise_for_status()\n",
        "            return [m[\"ticker\"] for m in r.json().get(\"markets\", [])]\n",
        "        except Exception as e:\n",
        "            print(f\"Kalshi error: {e}\")\n",
        "            return []\n",
        "\n",
        "    def get_orderbook(self, ticker):\n",
        "        try:\n",
        "            r = self.session.get(f\"{KALSHI_API}/markets/{ticker}/orderbook\", timeout=30)\n",
        "            r.raise_for_status()\n",
        "            ob = r.json().get(\"orderbook\", {})\n",
        "            bids = ob.get(\"yes\", []) or []\n",
        "            asks = ob.get(\"no\", []) or []\n",
        "\n",
        "            result = {\n",
        "                \"ticker\": ticker,\n",
        "                \"best_bid\": bids[0][0] if bids else None,\n",
        "                \"best_bid_size\": bids[0][1] if bids else None,\n",
        "                \"best_ask\": asks[0][0] if asks else None,\n",
        "                \"best_ask_size\": asks[0][1] if asks else None,\n",
        "                \"total_bid_volume\": sum(b[1] for b in bids),\n",
        "                \"total_ask_volume\": sum(a[1] for a in asks)\n",
        "            }\n",
        "\n",
        "            if result[\"best_bid\"] and result[\"best_ask\"]:\n",
        "                result[\"spread\"] = result[\"best_ask\"] - result[\"best_bid\"]\n",
        "                result[\"mid_price\"] = (result[\"best_bid\"] + result[\"best_ask\"]) / 2\n",
        "            else:\n",
        "                result[\"spread\"] = result[\"mid_price\"] = None\n",
        "\n",
        "            if bids:\n",
        "                result[\"bid_vwap\"] = round(sum(b[0]*b[1] for b in bids) / result[\"total_bid_volume\"], 2)\n",
        "            else:\n",
        "                result[\"bid_vwap\"] = None\n",
        "            if asks:\n",
        "                result[\"ask_vwap\"] = round(sum(a[0]*a[1] for a in asks) / result[\"total_ask_volume\"], 2)\n",
        "            else:\n",
        "                result[\"ask_vwap\"] = None\n",
        "\n",
        "            return result\n",
        "        except:\n",
        "            return None\n",
        "\n",
        "\n",
        "class NWSClient:\n",
        "    def __init__(self, config):\n",
        "        self.config = config\n",
        "        self.session = requests.Session()\n",
        "        self.session.headers.update({\"User-Agent\": \"KalshiCollector/1.0\", \"Accept\": \"application/geo+json\"})\n",
        "\n",
        "    def get_latest_observation(self):\n",
        "        try:\n",
        "            r = self.session.get(f\"{NWS_API}/stations/{self.config['station_id']}/observations/latest\", timeout=30)\n",
        "            r.raise_for_status()\n",
        "            p = r.json()[\"properties\"]\n",
        "            temp_c = p.get(\"temperature\", {}).get(\"value\")\n",
        "            return {\n",
        "                \"timestamp\": p.get(\"timestamp\"),\n",
        "                \"temperature_f\": round((temp_c * 9/5) + 32, 1) if temp_c else None,\n",
        "                \"temperature_c\": temp_c,\n",
        "                \"humidity\": p.get(\"relativeHumidity\", {}).get(\"value\"),\n",
        "                \"description\": p.get(\"textDescription\")\n",
        "            }\n",
        "        except:\n",
        "            return None\n",
        "\n",
        "    def get_daily_high(self):\n",
        "        try:\n",
        "            start = (datetime.utcnow() - timedelta(hours=48)).strftime(\"%Y-%m-%dT%H:%M:%SZ\")\n",
        "            r = self.session.get(f\"{NWS_API}/stations/{self.config['station_id']}/observations?start={start}\", timeout=30)\n",
        "            r.raise_for_status()\n",
        "\n",
        "            today = datetime.utcnow().strftime(\"%Y-%m-%d\")\n",
        "            obs = []\n",
        "            for f in r.json().get(\"features\", []):\n",
        "                p = f.get(\"properties\", {})\n",
        "                ts = p.get(\"timestamp\", \"\")\n",
        "                temp_c = p.get(\"temperature\", {}).get(\"value\")\n",
        "                if ts.startswith(today) and temp_c is not None:\n",
        "                    obs.append({\"timestamp\": ts, \"temp_f\": round((temp_c * 9/5) + 32, 1)})\n",
        "\n",
        "            if not obs:\n",
        "                return None\n",
        "\n",
        "            max_obs = max(obs, key=lambda x: x[\"temp_f\"])\n",
        "            return {\n",
        "                \"date\": today,\n",
        "                \"high_temperature_f\": max_obs[\"temp_f\"],\n",
        "                \"high_time\": max_obs[\"timestamp\"],\n",
        "                \"observation_count\": len(obs)\n",
        "            }\n",
        "        except:\n",
        "            return None\n",
        "\n",
        "    def get_forecast(self):\n",
        "        try:\n",
        "            url = f\"{NWS_API}/gridpoints/{self.config['nws_office']}/{self.config['grid_x']},{self.config['grid_y']}/forecast\"\n",
        "            r = self.session.get(url, timeout=30)\n",
        "            r.raise_for_status()\n",
        "            return [\n",
        "                {\"name\": p.get(\"name\"), \"start_time\": p.get(\"startTime\"),\n",
        "                 \"temperature_f\": p.get(\"temperature\"), \"short_forecast\": p.get(\"shortForecast\")}\n",
        "                for p in r.json().get(\"properties\", {}).get(\"periods\", [])\n",
        "            ]\n",
        "        except:\n",
        "            return []\n",
        "\n",
        "# ============================================================================\n",
        "# DATA STORAGE\n",
        "# ============================================================================\n",
        "\n",
        "def write_csv(filepath, row, fieldnames):\n",
        "    file_exists = os.path.isfile(filepath)\n",
        "    with open(filepath, \"a\", newline=\"\", encoding=\"utf-8\") as f:\n",
        "        writer = csv.DictWriter(f, fieldnames=fieldnames)\n",
        "        if not file_exists:\n",
        "            writer.writeheader()\n",
        "        writer.writerow(row)\n",
        "\n",
        "def save_orderbook(ticker, ob):\n",
        "    date_str = datetime.utcnow().strftime(\"%Y-%m-%d\")\n",
        "    os.makedirs(f\"{PROJECT_DIR}/data/orderbooks/{date_str}\", exist_ok=True)\n",
        "\n",
        "    row = {\n",
        "        \"timestamp\": datetime.utcnow().isoformat(),\n",
        "        \"ticker\": ticker,\n",
        "        \"best_bid\": ob.get(\"best_bid\"),\n",
        "        \"best_bid_size\": ob.get(\"best_bid_size\"),\n",
        "        \"best_ask\": ob.get(\"best_ask\"),\n",
        "        \"best_ask_size\": ob.get(\"best_ask_size\"),\n",
        "        \"spread\": ob.get(\"spread\"),\n",
        "        \"mid_price\": ob.get(\"mid_price\"),\n",
        "        \"bid_vwap\": ob.get(\"bid_vwap\"),\n",
        "        \"ask_vwap\": ob.get(\"ask_vwap\"),\n",
        "        \"total_bid_volume\": ob.get(\"total_bid_volume\"),\n",
        "        \"total_ask_volume\": ob.get(\"total_ask_volume\")\n",
        "    }\n",
        "    write_csv(f\"{PROJECT_DIR}/data/orderbooks/{date_str}/{ticker}.csv\", row, list(row.keys()))\n",
        "\n",
        "def save_weather(city, obs):\n",
        "    row = {\n",
        "        \"collected_at\": datetime.utcnow().isoformat(),\n",
        "        \"observation_time\": obs.get(\"timestamp\"),\n",
        "        \"temperature_f\": obs.get(\"temperature_f\"),\n",
        "        \"humidity\": obs.get(\"humidity\"),\n",
        "        \"description\": obs.get(\"description\")\n",
        "    }\n",
        "    write_csv(f\"{PROJECT_DIR}/data/weather/observations/{city.lower()}.csv\", row, list(row.keys()))\n",
        "\n",
        "def save_daily_high(city, high):\n",
        "    row = {\n",
        "        \"collected_at\": datetime.utcnow().isoformat(),\n",
        "        \"date\": high.get(\"date\"),\n",
        "        \"high_temperature_f\": high.get(\"high_temperature_f\"),\n",
        "        \"high_time\": high.get(\"high_time\")\n",
        "    }\n",
        "    write_csv(f\"{PROJECT_DIR}/data/weather/daily_highs/{city.lower()}.csv\", row, list(row.keys()))\n",
        "\n",
        "def save_forecast(city, forecasts):\n",
        "    collected_at = datetime.utcnow().isoformat()\n",
        "    for fc in forecasts:\n",
        "        row = {\n",
        "            \"collected_at\": collected_at,\n",
        "            \"period_name\": fc.get(\"name\"),\n",
        "            \"temperature_f\": fc.get(\"temperature_f\"),\n",
        "            \"short_forecast\": fc.get(\"short_forecast\")\n",
        "        }\n",
        "        write_csv(f\"{PROJECT_DIR}/data/weather/forecasts/{city.lower()}.csv\", row, list(row.keys()))\n",
        "\n",
        "# ============================================================================\n",
        "# MAIN COLLECTOR\n",
        "# ============================================================================\n",
        "\n",
        "print(\"\\n\" + \"=\" * 60)\n",
        "print(\"Starting data collection...\")\n",
        "print(f\"Market: {MARKET}\")\n",
        "print(f\"Orderbook interval: {ORDERBOOK_INTERVAL}s\")\n",
        "print(f\"Weather interval: {WEATHER_INTERVAL}s\")\n",
        "print(\"=\" * 60 + \"\\n\")\n",
        "\n",
        "# Initialize clients\n",
        "kalshi = KalshiClient()\n",
        "nws = NWSClient(WEATHER_STATIONS[MARKET])\n",
        "city = WEATHER_STATIONS[MARKET][\"name\"]\n",
        "\n",
        "# Test connectivity\n",
        "print(\"Testing APIs...\")\n",
        "tickers = kalshi.get_active_tickers(MARKET)\n",
        "print(f\"‚úì Kalshi: {len(tickers)} active markets\")\n",
        "obs = nws.get_latest_observation()\n",
        "if obs:\n",
        "    print(f\"‚úì NWS: {obs['temperature_f']}¬∞F\")\n",
        "print()\n",
        "\n",
        "# Collection state\n",
        "last_ob_time = None\n",
        "last_wx_time = None\n",
        "last_ticker_refresh = None\n",
        "active_tickers = []\n",
        "stats = {\"orderbooks\": 0, \"weather\": 0, \"errors\": 0, \"start\": datetime.utcnow()}\n",
        "last_status = datetime.utcnow()\n",
        "\n",
        "# Main loop\n",
        "try:\n",
        "    while True:\n",
        "        now = datetime.utcnow()\n",
        "\n",
        "        # Refresh tickers every 5 minutes\n",
        "        if last_ticker_refresh is None or (now - last_ticker_refresh).total_seconds() > 300:\n",
        "            active_tickers = kalshi.get_active_tickers(MARKET)\n",
        "            last_ticker_refresh = now\n",
        "\n",
        "        # Collect orderbooks\n",
        "        if last_ob_time is None or (now - last_ob_time).total_seconds() >= ORDERBOOK_INTERVAL:\n",
        "            for ticker in active_tickers:\n",
        "                try:\n",
        "                    ob = kalshi.get_orderbook(ticker)\n",
        "                    if ob:\n",
        "                        save_orderbook(ticker, ob)\n",
        "                except Exception as e:\n",
        "                    stats[\"errors\"] += 1\n",
        "            stats[\"orderbooks\"] += 1\n",
        "            last_ob_time = now\n",
        "\n",
        "        # Collect weather\n",
        "        if last_wx_time is None or (now - last_wx_time).total_seconds() >= WEATHER_INTERVAL:\n",
        "            try:\n",
        "                obs = nws.get_latest_observation()\n",
        "                if obs:\n",
        "                    save_weather(city, obs)\n",
        "\n",
        "                high = nws.get_daily_high()\n",
        "                if high:\n",
        "                    save_daily_high(city, high)\n",
        "\n",
        "                fc = nws.get_forecast()\n",
        "                if fc:\n",
        "                    save_forecast(city, fc)\n",
        "\n",
        "                stats[\"weather\"] += 1\n",
        "            except:\n",
        "                stats[\"errors\"] += 1\n",
        "            last_wx_time = now\n",
        "\n",
        "        # Print status\n",
        "        if (now - last_status).total_seconds() >= STATUS_INTERVAL:\n",
        "            clear_output(wait=True)\n",
        "            uptime = now - stats[\"start\"]\n",
        "            print(\"=\" * 60)\n",
        "            print(\"üå°Ô∏è  KALSHI WEATHER COLLECTOR - RUNNING\")\n",
        "            print(\"=\" * 60)\n",
        "            print(f\"\\nüìä Market: {MARKET}\")\n",
        "            print(f\"üìÅ Data: {PROJECT_DIR}/data\")\n",
        "            print(f\"\\n‚è±Ô∏è  Uptime: {str(uptime).split('.')[0]}\")\n",
        "            print(f\"\\nüìà Collections:\")\n",
        "            print(f\"   Orderbooks: {stats['orderbooks']}\")\n",
        "            print(f\"   Weather:    {stats['weather']}\")\n",
        "            print(f\"   Errors:     {stats['errors']}\")\n",
        "            print(f\"\\nüéØ Active Tickers: {len(active_tickers)}\")\n",
        "            if obs:\n",
        "                print(f\"\\nüå°Ô∏è  Current: {obs.get('temperature_f')}¬∞F\")\n",
        "            print(f\"\\n‚è∞ {now.strftime('%Y-%m-%d %H:%M:%S')} UTC\")\n",
        "            print(\"\\n\" + \"=\" * 60)\n",
        "            print(\"Press STOP (‚èπÔ∏è) to end collection\")\n",
        "            last_status = now\n",
        "\n",
        "        time.sleep(1)\n",
        "\n",
        "except KeyboardInterrupt:\n",
        "    print(\"\\n\\n‚èπÔ∏è  Collection stopped\")\n",
        "    print(f\"Data saved to: {PROJECT_DIR}/data\")"
      ]
    }
  ]
}